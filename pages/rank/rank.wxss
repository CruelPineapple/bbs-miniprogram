/* pages/rank/rank.wxss */
page{
  background-color: #192436;
  color: white;
}
.user-rank:nth-child(even){
  background-color: rgb(44, 44, 44);
}
.user-rank:nth-child(odd){
  background-color: rgba(25, 25, 25);
}
.user-rank{
  bottom: 0px;
  width: 100%;
  height: 70px;
  margin: 0;
}
.user{
  margin-left: 15px;
  font-size: 18px;
}

.flex-box{
  height: 70px;
  display: flex;
  float: left;
  align-items: center;
  margin: 0;
}
.medal-box{
  width: 45px;
  height: 45px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20px;
}
.medal{
  width: 30px;
  height: 30px;
}
.icon{
  width: 50px;
  height: 50px;
}
.score{
  float: right;
  line-height: 70px;
  margin-right: 15px;
}